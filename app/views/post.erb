<% content_for :title do %><%= @post.title %><% end %>

<section class="<%= @post.slug %>">
  <header>
    <h2>
      <a href="/<%= @post.slug %>"><%= @post.title %></a>
    </h2>

    <% if @post.date %>
      <time datatime="<%= @post.date.to_s %>">
        <a href="/<%= @post.slug %>">
          <%= @post.date.to_s(:short_ordinal) %>
        </a>
      </time>
    <% end %>

    <h3 class="author">
      by <%= @post.author %>
    </h3>
  </header>

  <div class="body">
    <%== @post.render %>
  </div>
</section>